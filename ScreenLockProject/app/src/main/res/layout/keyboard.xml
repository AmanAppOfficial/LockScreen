<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/pin_lock_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image"
        >


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_above="@+id/view"
            android:layout_marginBottom="10dp"
            android:layout_alignRight="@+id/view"
            android:id="@+id/button_back" />
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#FFF"
            android:layout_above="@+id/numericPad"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:id="@+id/view" />

        <TableLayout
            android:id="@+id/numericPad"
            android:layout_width="279dp"
            android:layout_height="310dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="5dip"
            android:layout_marginBottom="20dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text="2"
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text="4"
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text="5"
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text="6"
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text="7"
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>

                <Button
                    android:id="@+id/button8"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text="8"
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>

                <Button
                    android:id="@+id/button9"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text="9"
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button

                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>


                <Button
                    android:id="@+id/button0"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>


                <Button
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="7dip"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="40sp"></Button>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:inputType="numberPassword"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:clickable="false"
            android:layout_toLeftOf="@+id/button_back"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_alignStart="@+id/view"
            android:id="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/view"
            android:background="@android:color/transparent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/enter_password"
            android:id="@+id/statusviewKeyboard"
            android:textColor="@color/white"
            android:layout_below="@+id/time_text"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/time_text"
            android:textSize="100sp"
            android:layout_marginTop="44dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            />
    </RelativeLayout>
</merge>
