<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/sample_4"
    android:layout_height="wrap_content"
    android:theme="@style/FullScreen"
    tools:context=".Views.Wallpaper.ChangeBackgroundActivity">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_screen"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"

        />
    </androidx.appcompat.widget.Toolbar>



    <ScrollView
            android:layout_below="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/image_sample_0"
                        android:layout_height="400dp"
                        android:fitsSystemWindows="true"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:src="@drawable/sample_0"
                        />
                    <ImageView
                        android:layout_height="400dp"
                        android:id="@+id/image_sample_1"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/sample_1"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/image_sample_2"
                        android:layout_height="400dp"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:fitsSystemWindows="true"
                        android:src="@drawable/sample_2"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:id="@+id/image_sample_3"
                        android:layout_height="400dp"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/sample_3"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/image_sample_4"
                        android:layout_height="400dp"
                        android:scaleType="fitXY"
                        android:fitsSystemWindows="true"
                        android:layout_width="wrap_content"
                        android:src="@drawable/sample_4"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:id="@+id/image_sample_5"
                        android:layout_height="400dp"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/sample_5"
                        />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>



</RelativeLayout>